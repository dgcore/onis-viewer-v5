# Configuration EditorConfig pour ONIS Viewer
# Assure la cohérence du formatage entre différents éditeurs

root = true

# Configuration générale
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Dart/Flutter
[*.dart]
indent_style = space
indent_size = 2
max_line_length = 80

# C++
[*.{cpp,h,hpp,cc,cxx}]
indent_style = space
indent_size = 2
max_line_length = 80

# C
[*.{c}]
indent_style = space
indent_size = 2
max_line_length = 80

# CMake
[CMakeLists.txt]
indent_style = space
indent_size = 2

# YAML
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# JSON
[*.json]
indent_style = space
indent_size = 2

# Markdown
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2

# Windows batch files
[*.{cmd,bat}]
end_of_line = crlf

# Documentation
[*.{txt,rst}]
trim_trailing_whitespace = false 